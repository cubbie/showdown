<!DOCTYPE html>
<html>
  <head>
    <title>Showdown</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="side_nav" id="side_nav">
      <div class="logo">
        <%= image_tag "bitmaker_logo.svg", class: "bitmaker_logo"%>
      </div>
      <div class="navbar_links" id="navbar_links">
        <li><%= link_to "New Showdown", new_bracket_url %></li>
          <li><%= link_to "Past Showdowns", root_url %></li>
      </div>
      <div class="login">
        <% if current_user %>
        <%= link_to current_user.email, root_url %> | <%= link_to "Log Out", "#{sessions_path}/#{current_user.id}", method: :delete %>
        <% else %>
        <%= link_to "Log In", new_session_url %>  or <%= link_to "Sign up", new_user_url %>
        <% end %>
      </div>
    </div>


    <%= yield %>
  </body>
</html>
